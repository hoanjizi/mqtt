<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ItemReceive"
            type="home.viewmodels.ReceiveDataViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_margin="8dp"
        android:background="@drawable/custom_item_receive_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/col1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/col2"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:text="@{ItemReceive.nhietDo}"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.doAm}" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.gas}" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/col2"
            app:layout_constraintStart_toEndOf="@id/col1"
            app:layout_constraintEnd_toStartOf="@id/col3"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.CAmBienHongNgoai}" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.CAmBienTuCua}" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.den}" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/col3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/col2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.quat}"/>
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.vanTu}" />
            <TextView
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ItemReceive.coiBao}" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</layout>